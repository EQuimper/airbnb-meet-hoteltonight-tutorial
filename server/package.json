{
  "name": "airbnb-meet-hoteltonight",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "email": "quimperemanuel@gmail.com",
    "name": "Emanuel Quimper <EQuimper>"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --forceExit",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
    "open-coverage": "open coverage/lcov-report/index.html",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongoose": "^5.0.11",
    "@types/node": "^6.0.107",
    "@types/yup": "^0.24.3",
    "cross-env": "^5.1.4",
    "gql2ts": "^1.8.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "apollo-server": "^2.0.0-beta.1",
    "apollo-server-express": "^2.0.0-beta.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.0",
    "jsonwebtoken": "^8.2.1",
    "merge-graphql-schemas": "^1.5.1",
    "mongoose": "^5.0.17",
    "yup": "^0.24.1"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./test/setup.ts"
    ],
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
