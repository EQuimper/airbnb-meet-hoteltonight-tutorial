{
  "name": "airbnb-meet-hoteltonight",
  "version": "0.0.1",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --forceExit"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/jest": "^22.2.3",
    "@types/mongoose": "^5.0.11",
    "@types/node": "^6.0.107",
    "@types/yup": "^0.24.3",
    "cross-env": "^5.1.4",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-yoga": "^1.13.1",
    "mongoose": "^5.0.17",
    "yup": "^0.24.1"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./test/setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
